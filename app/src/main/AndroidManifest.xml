<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.othernewspaper.horseracepresenter">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.othernewspaper.horseracepresenter.app.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.othernewspaper.horseracepresenter.QuestionsActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.othernewspaper.horseracepresenter.MainActivity" />

        </activity>
        <activity android:name="com.othernewspaper.horseracepresenter.AddQuestionActivity">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.othernewspaper.horseracepresenter.QuestionsActivity" />
        </activity>
        <activity android:name="com.othernewspaper.horseracepresenter.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>